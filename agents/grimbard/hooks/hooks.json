{
  "hooks": {
    "SubagentStart": [
      {
        "matcher": "grimbard-*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/init-grimbard.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "grimbard-*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/cleanup-grimbard.sh"
          }
        ]
      }
    ]
  }
}
